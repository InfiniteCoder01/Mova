files "src/**.cpp";
watch "src/**.h src/**.hpp";
include "src/";
flags "-std=c++17";

[Debug]:
flags "-w -DDEBUG -fsanitize=address -g3";
linkerFlags "-fsanitize=address";

[Linux]:
linkerFlags "-Ofast -lX11 -lXrandr -lGL";
// library "imgui";

[Windows]:
linkerFlags "-O3 -lgdi32 -lopengl32 -DWIN32_LEAN_AND_MEAN";
// library "imgui";

[Emscripten]:
compiler "emcc";
linkerFlags "-sASYNCIFY -lembind --shell-file html/basic_template.html";
